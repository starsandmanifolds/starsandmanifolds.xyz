{
  "name": "starsandmanifolds.xyz",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "prebuild": "mkdir -p static/katex && cp -r node_modules/katex/dist/* static/katex/",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lighthouse": "npm run build && lhci collect && lhci assert && lhci upload",
    "lighthouse:urls": "node scripts/extract-sitemap-urls.js",
    "lighthouse:open": "open .lighthouseci/lhr-*.html"
  },
  "devDependencies": {
    "@fontsource/dancing-script": "^5.2.8",
    "@fontsource/fira-code": "^5.2.7",
    "@fontsource/inter": "^5.2.8",
    "@lhci/cli": "^0.15.1",
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/adapter-cloudflare": "^7.2.3",
    "@sveltejs/kit": "^2.48.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "gray-matter": "^4.0.3",
    "katex": "^0.16.25",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "shiki": "^3.14.0",
    "svelte": "^5.43.2",
    "svelte-check": "^4.3.3",
    "tailwindcss": "^4.1.16",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "type": "module",
  "dependencies": {
    "@cloudflare/workerd-linux-64": "^1.20251101.0",
    "@tailwindcss/postcss": "^4.1.13",
    "marked": "^16.4.1",
    "marked-katex-extension": "^5.1.6"
  }
}
